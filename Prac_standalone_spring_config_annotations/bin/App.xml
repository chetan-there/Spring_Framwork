<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd">

	<!-- Enable component scanning -->
	<context:component-scan base-package="com.ct"></context:component-scan>

	<!-- Setter Injection for Doctor -->
	<bean id="doctor" class="com.ct.Doctor">
		<property name="name" value="Dr. Chetan There" />
		<property name="qualification" value="MBBS" />
		<property name="experience" value="5" />
	</bean>

	<bean id="nurse" class="com.ct.Nurse">
		<property name="name" value="Priya" />
		<property name="department" value="nurse" />
		<property name="experience" value="5" />
	
	</bean>
</beans>
